    <a href="" class ="btn btn-success sendbutton"><i class ="icon-ok" ></i></a>
<button type ="reset" class = "btn btn-danger cancelbutton"><i class=" icon-remove-circle"></i></button>
      </center>
      </div>
<% end %>
